<Window x:Class="ConstellationProjArchitec.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="267" Width="402" Loaded="Window_Loaded">
    <Grid Height="219" Width="332">
        <TextBox Height="23" HorizontalAlignment="Left" Margin="142,58,0,0" Name="txtName" VerticalAlignment="Top" Width="162" 
                 Text="{Binding Path=Name}"/>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="142,115,0,0" Name="txtEvaluation" VerticalAlignment="Top" Width="162" 
                 Text="{Binding Path=Evaluation}"/>
        <Button Content="Change" Height="23" HorizontalAlignment="Left" Margin="229,176,0,0" Name="btnChange" VerticalAlignment="Top" Width="75" Click="btnChange_Click" />
        <Label Content="Name:" Height="28" HorizontalAlignment="Left" Margin="42,53,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Evaluation:" Height="28" HorizontalAlignment="Left" Margin="42,110,0,0" Name="label2" VerticalAlignment="Top" />
    </Grid>
</Window>
